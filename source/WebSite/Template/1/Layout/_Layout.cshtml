@inject Common.IService.ICMSService cmsService
@{
    var SiteBasic = cmsService.GetBasic();
    var Tag = ViewData["Tag"] as string;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    @if (ViewData["Title"] == null)
    {
        <title>@Html.Raw(SiteBasic.SiteTitle)</title>
    }
    else
    {
        <title>@Html.Raw(ViewData["Title"] + "-" + SiteBasic.CompName)</title>
    }
    <meta name="viewport" content="initial-scale=0.37">
    @if (ViewData["Desc"] == null)
    {
        <meta name="description" content="@Html.Raw(SiteBasic.SiteDesc)" />
    }
    else
    {
        <meta name="description" content="@Html.Raw(ViewData["Desc"]+"-"+SiteBasic.CompName)" />
    }
    <link rel="stylesheet" type="text/css" href="/Content/css/base.css">
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/Content/js/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/Content/js/bootstrap.min.js"></script>
    <script src="/js/jquery-1.8.2.js"></script>
    @RenderSection("head", required: false)
    <!--[if lt IE 9]>
    <script src="/js/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div class="header_box">
        <div class="stipulation_width header">
            <div class="left">
                <a href="~/"><img class="logo" src="@SiteBasic.Logo" alt="@SiteBasic.CompName" /></a>
                <a href="~/"><img class="logo2" src="/Content/images/logo2.png" alt="@SiteBasic.CompName" /></a>
                <span></span>
                <div class="fontCss">@Html.Raw(SiteBasic.LogoText)</div>
            </div>
            <a href="~/Manage/" class="right head_portrait">
                <img class="before" src="~/Content/images/head_portrait_after.png" />
                @if (cmsService.IuserService.IsAuth)
                {
                    if (cmsService.IuserService.IsManageMember && cmsService.IuserService.ApplicationUser.Mng_admin != null)
                    {
                        <span>@Html.Raw(cmsService.IuserService.ApplicationUser.Mng_admin.RealName)</span>
                    }
                    else
                    {
                        <span>@Html.Raw(cmsService.IuserService.SaleSellerUser.Name)</span>
                    }
                }
                <div class="clearfix"></div>
            </a>
            <div class="nav">
                <a href="/">首页</a>
                <a href="/News/0-1.html">新闻</a>
                <a href="/Product/">产品</a>
                <a href="/Service/">服务</a>
                <a style="display:none;" href="/SalesNetWork/">销售网络</a>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>

    </div>
    <div class="perch"></div>
    <div>
        @RenderBody()
    </div>
    <div class="footer">            
        <div class="stipulation_width">
                <p>@Html.Raw(SiteBasic.Copyright)</p>
                <p>@Html.Raw(SiteBasic.Icp)</p>
            </div>
    </div>
</body>

</html>
@RenderSection("foot", required: false)
<script type="text/javascript">
        $(document).ready(function () {
            $(".nav a").eq(@ViewBag.Tag).addClass("current");
        });
</script>
@Html.Raw(SiteBasic.StatsCode)



