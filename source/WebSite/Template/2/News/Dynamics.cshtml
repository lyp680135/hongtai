@page "{tid:int}-{p:int}.html"
@inject ICMSService _cmsService
@inject IContentGroupService _contentService
@{
    ViewData["Title"] = "行业动态";
    ViewData["Desc"] = "行业动态";
}
@functions{
    private int pageSize = 20;

    public int NewsTypeId { get; set; }

    public int PageIndex { get; set; }

    public int PageCount { get; set; }

    public List<Dictionary<string, object>> dict { get; set; }

    public List<DataLibrary.SiteModelColumn> NewsType { get; set; }

    public new int Page { get; set; }

    public void OnGet(int? tid, int? p)
    {
        this.Page = p ?? 1;
        this.PageCount = _cmsService.IcontentColumnDataService.GetContentCount("闽源新闻"," NewsType=2");
    }
}
@section head{

}

<div id="main" class="part">

    <ul id="menu" class="fl">
        <li>
            <a href="/News/0-1.html">
                <i class="icon-chevron-right"></i>公司新闻
            </a>
        </li>
        <li class="on">
            <a href="/News/Dynamics/0-1.html">
                <i class="icon-chevron-right"></i>行业动态
            </a>
        </li>
        <li>
            <a href="/News/Video">
                <i class="icon-chevron-right"></i>闽源视频
            </a>
        </li>
    </ul>


    <div id="list" class="fr">
        <ul class="list1">
            @{
                var Dynamic = _cmsService.IcontentColumnDataService.GetContentColumnDataList("闽源新闻", Page,pageSize, "NewsType = 2");
                if (Dynamic != null)
                {
                    for (var i = 0; i < Dynamic.Count; i++)
                    {
                            <li>
                                <span> @Util.Extensions.GetDateTimeFromUnixTime(Convert.ToInt64(Dynamic[i]["Createtime"])).ToString("yyyy-MM-dd")</span>
                                <a href="/News/IndexDetail/@Html.Raw(Dynamic[i]["cid"] + "/" + Dynamic[i]["Id"] + ".html")">
                                    @Html.Raw(Dynamic[i]["Title"])
                                </a>
                            </li>
                    }
                }
            }
        </ul>
        <div id="Pagination">
            @await Component.InvokeAsync("PageList", new { PageSize = this.pageSize, PageIndex = this.Page, PageCount = this.PageCount, PageUrl = Model.NewsTypeId + "-{0}.html", PageText = "{0}", ShowCount = 6, ShowAll = false })
        </div>
    </div>
</div>