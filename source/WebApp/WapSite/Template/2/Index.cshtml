@page
@inject ICMSService _cmsService
@{
    ViewData["Tag"] = 0;
    var siteBasic = _cmsService.GetBasic();
    var mngSetting = _cmsService.GetSetting();
    ViewBag.SiteBasic = siteBasic;
    ViewBag.SiteSetting = mngSetting;
    var linklist = _cmsService.GetSiteLink((int)SiteLinkPostion.移动端显示);
    var list = _cmsService.GetSiteLink((int)SiteLinkPostion.PC移动全显示);
}
@section head{
    <script type="text/javascript" src="/Content/js/index.js"></script>
    <link rel="stylesheet" type="text/css" href="/Content/css/index.css">
}

<div class="banner">
    <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            @if (siteBasic.CarouselImage.SafeString() != string.Empty)
            {
                for (var i = 0; i < siteBasic.CarouselImage.Object.Count; i++)
                {
                    @if (i == 0)
                    {
                        <div class="item active">
                            <img src="@mngSetting.Domain_PC.Substring(0, mngSetting.Domain_PC.Length - 1)@siteBasic.CarouselImage.Object[i]" width="100%" />
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <img src="@mngSetting.Domain_PC.Substring(0, mngSetting.Domain_PC.Length - 1)@siteBasic.CarouselImage.Object[i]" width="100%" />
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>
<div id="Abount">
    <div class="share_title">
        <div class="title_box">
            <span class="span1"></span>
            <span class="span2"></span>
            <h1>关于闽源</h1>
            <span class="span2"></span>
            <span class="span1"></span>
            <div class="clearfix"></div>
        </div>
        <small>坚持创新树人，追求卓越</small>
    </div>
    <div>
        <video controls="" loop="" onended="var v=this;setTimeout(function(){v.play()},300)" style=" width:100%; background:#000;" title="闽源钢铁股份有限公司">
            <source src="http://mygtjt.xiaoyutt.com/UploadFile/video/mytgjt.mp4" type="video/mp4">
        </video>
    </div>
    <a href="/About_us/" class="about">
        <div class="introduce">
            @{
                var about = _cmsService.GetSinglePage("关于闽源");
                if (about != null)
                {
                    <div style="text-align:center">
                        @Html.Raw(about.Descrption)
                    </div>
                }
            }
        </div>
        <div class="idea">
            <div class="idea_picture">
                <img src="Content/images/about.jpg" />
            </div>
            <div class="idea_box">
                <h2>企业理念</h2>
                <p>创新树人，追求卓越，绿色发展，回报社会</p>
                <h2>经营理念</h2>
                <p>质量诚信、共赢未来</p>
                <h2>核心价值观</h2>
                <p>共创，共赢，和谐，发展</p>
            </div>
        </div>
    </a>
</div>


<div class="news about">
    <div class="share_title">
        <div class="title_box">
            <span class="span1"></span>
            <span class="span2"></span>
            <h1>新闻资讯</h1>
            <span class="span2"></span>
            <span class="span1"></span>
            <div class="clearfix"></div>
        </div>
        <small>严守法规  社会责任  持续发展</small>
    </div>
    <div class="news_box">
        <div class="tabtitle">
            <h2 class="news_title">公司新闻</h2>
            <h2 class="news_title">行业动态</h2>
            <div class="clearfix"></div>
        </div>
        <div class="tab_content">
            @{
                var News = _cmsService.IcontentColumnDataService.GetContentColumnDataList("闽源新闻", 1, 5, "NewsType =1 ");
                if (News != null)
                {
                    for (var i = 0; i < News.Count; i++)
                    {
                            <a href="/News/@Html.Raw(News[i]["cid"]+"/"+News[i]["Id"]+".html")">
                                <p>
                                    @Util.Extensions.GetDateTimeFromUnixTime(Convert.ToInt64(News[i]["Createtime"])).ToString("MM-dd")
                                </p>
                                <span></span>
                                <p>
                                    @Html.Raw(News[i]["Title"])
                                </p>
                                <div class="clearfix"></div>
                            </a>
                    }
                }
            }
        </div>
        <div class="tab_content dynamic">
            @{
                var New = _cmsService.IcontentColumnDataService.GetContentColumnDataList("闽源新闻", 1, 5, "NewsType =2 ");
                if (New != null)
                {
                    for (var i = 0; i < New.Count; i++)
                    {
                            <a href="/News/@Html.Raw(New[i]["cid"]+"/"+New[i]["Id"]+".html")">
                                <p>
                                    @Util.Extensions.GetDateTimeFromUnixTime(Convert.ToInt64(New[i]["Createtime"])).ToString("MM-dd")
                                </p>
                                <span></span>
                                <p>
                                    @Html.Raw(New[i]["Title"])
                                </p>
                                <div class="clearfix"></div>
                            </a>
                    }
                }
            }
        </div>
    </div>
</div>

<div class="mien about">
    <div class="share_title">
        <div class="title_box">
            <span class="span1"></span>
            <span class="span2"></span>
            <h1>集团风采</h1>
            <span class="span2"></span>
            <span class="span1"></span>
            <div class="clearfix"></div>
        </div>
        <small>最好的产品来自专业的制造能力</small>
    </div>
    <div class="row_box">
        @{
            var Sence = _cmsService.IcontentColumnDataService.GetContentColumnDataList("闽源风采", 1, 5);
            if (Sence != null)
            {
                for (var i = 0; i < Sence.Count; i++)
                {
                    if (i % 2 == 0)
                    {
                        <a href="FengCai/@Html.Raw(Sence[i]["cid"]+ "/" + Sence[i]["Id"] + ".html")" class="mien_box left_box">
                            <h2>@Html.Raw(Sence[i]["Title"])</h2>
                            <p>
                                @if (!string.IsNullOrEmpty(Sence[i]["Content"].ToString()))
                                {
                                    var content = Util.Extensions.RemoveHtml(Sence[i]["Content"].ToString());
                                    if (content.Length > 90)
                                    {
                                        content = content.Substring(0, 60) + "...";
                                    }
                                    @Html.Raw(content)
                                }
                            </p>
                            <img src="@mngSetting.Domain_PC.Substring(0, mngSetting.Domain_PC.Length - 1)@Sence[i]["Image"].ToString().Split(',')[0]" />
                        </a>
                    }
                    else
                    {
                        <a href="FengCai/@Html.Raw(Sence[i]["cid"]+ "/" + Sence[i]["Id"] + ".html")" class="mien_box right_box">
                            <h2>@Html.Raw(Sence[i]["Title"])</h2>
                            <p>
                                @if (!string.IsNullOrEmpty(Sence[i]["Content"].ToString()))
                                {
                                    var content = Util.Extensions.RemoveHtml(Sence[i]["Content"].ToString());
                                    if (content.Length > 90)
                                    {
                                        content = content.Substring(0, 60) + "...";
                                    }
                                    @Html.Raw(content)
                                }
                            </p>
                            <img src="@mngSetting.Domain_PC.Substring(0, mngSetting.Domain_PC.Length - 1)@Sence[i]["Image"].ToString().Split(',')[0]" />
                        </a>
                    }

                }
                <div class="clearfix"></div>

            }
        }
    </div>
</div>

<div class="contact about">
    <h1>联系我们</h1>
    @{
        var Phone = _cmsService.IcontentColumnDataService.GetContentColumnDataList("联系闽源", 1, 5);
        if (Phone != null)
        {
            foreach (var P in Phone)
            {
                <div class="contact_row">
                    <img src="/Content/images/contact1.png" />
                    <p>电话:@Html.Raw(P["Phone"])</p>
                    <div class="clearfix"></div>
                </div>
                <div class="contact_row">
                    <img src="/Content/images/contact2.png" />
                    <p>邮编:@Html.Raw(P["ZipCode"])</p>
                    <div class="clearfix"></div>
                </div>
                <div class="contact_row">
                    <img src="/Content/images/contact3.png" />
                    <p>传真:@Html.Raw(P["Fax"])</p>
                    <div class="clearfix"></div>
                </div>
                <div class="contact_row">
                    <img src="/Content/images/contact4.png" />
                    <p>地址:@Html.Raw(P["Address"])</p>
                    <div class="clearfix"></div>
                </div>
            }
        }
    }
</div>

@if (linklist.Count > 0 || list.Count > 0)
{
    <div id="Wfriend">
        <div id="FriendShip">
            <span style="font-size:14px">友情链接</span>
            <ul>
                @foreach (var a in linklist)
                {
                    if (a.LinkType == (int)SiteLinkType.图片链接)
                    {
                        <li>
                            <a href="@a.Url" target="_blank"><img src="@a.PicLink" alt="@Html.Raw(a.Description)" style="height:@Convert.ToInt32(a.PicHeight)px;width:@Convert.ToInt32(a.PicWidth)px" /></a>
                        </li>
                        @if (a.Sequence > 0)
                        {
                            <li>|</li>
                        }
                    }
                    else
                    {
                        <li>
                            <a href="@a.Url" target="_blank" title="@Html.Raw(a.Description)">@Html.Raw(a.Name)</a>
                        </li>
                        @if (a.Sequence > 0)
                        {
                            <li>|</li>
                        }
                    }
                }
                @if (linklist.Count > 0 && list.Count > 0)
                {
                    <li>|</li>
                }

                @foreach (var a in list)
                {
                    if (a.LinkType == (int)SiteLinkType.图片链接)
                    {
                        <li>
                            <a href="@a.Url" target="_blank"><img src="@a.PicLink" alt="@Html.Raw(a.Description)" style="height:@Convert.ToInt32(a.PicHeight)px;width:@Convert.ToInt32(a.PicWidth)px" /></a>
                        </li>
                        @if (a.Sequence > 1)
                        {
                            <li>|</li>
                        }
                    }
                    else
                    {
                        <li>
                            <a href="@a.Url" target="_blank" title="@Html.Raw(a.Description)">@Html.Raw(a.Name)</a>
                        </li>
                        @if (a.Sequence > 1)
                        {
                            <li>|</li>
                        }
                    }

                }
            </ul>

        </div>
    </div>
}