@inject Common.IService.IUserService _userService
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    @if (ViewData["Title"] == null)
    {
        <title>@Html.Raw(ViewBag.SiteBasic.SiteTitle)</title>
    }
    else
    {
        <title>@Html.Raw(ViewData["Title"] + "-" + ViewBag.SiteBasic.CompName)</title>
    }
    @if (ViewData["Desc"] == null)
    {
        <meta name="description" content="@Html.Raw(ViewBag.SiteBasic.SiteDesc)" />
    }
    else
    {
        <meta name="description" content="@Html.Raw(ViewData["Desc"]+"-"+ViewBag.SiteBasic.CompName)" />
    }

    <link rel="stylesheet" href="/Content/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/base.css">
    <script src="/Content/lib/js/jquery.min.js" type="text/javascript"></script>
    <script src="/Content/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Content/js/jquery.contentcarousel.js"></script>
    @RenderSection("head", false)
    @Html.Raw(ViewBag.SiteBasic.StatsCode)
</head>
<body>
    <div class="header">
        <div class="left">
            <a href="/"><img class="logo" src="@ViewBag.SiteSetting.Domain_PC.Substring(0,ViewBag.SiteSetting.Domain_PC.Length-1)@ViewBag.SiteBasic.Logo" alt="@Html.Raw(ViewBag.SiteBasic.CompName)" /></a>
            @*<span class="line"></span>*@
        </div>
        @*<div class="fontCss">@Html.Raw(ViewBag.SiteBasic.LogoText)</div>*@
        <div class="right">
            @if (_userService.IsAuth)
            {
                <a href="@ViewBag.SiteSetting.Domain_WAPManage">
                    <img class="after" src="/Content/images/head_portrait_after.png" />
                    @if (_userService.IsManageMember && _userService.ApplicationUser.Mng_admin != null)
                    {
                        <span>@Html.Raw(_userService.ApplicationUser.Mng_admin.RealName)</span>
                    }
                    else
                    {
                        <span>@Html.Raw(_userService.SaleSellerUser.Name)</span>
                    }
                </a>
            }
            else
            {
                <a href="/Login">
                    <img class="after" src="/Content/images/head_portrait_after.png" />
                    <span>登录</span>
                </a>
            }
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="perch"></div>
    <div class="nav">
        <ul>
            <li><a href="/">首页</a><img src="/Content/images/nav_line.png" /></li>
            <li><a href="/Product">产品</a> <img src="/Content/images/nav_line.png" /></li>
            <li><a href="/Service">服务</a><img src="/Content/images/nav_line.png" /></li>
            <li><a href="/Sales" style="border-right:0;">销售</a> </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("foot", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $(".nav ul li a").eq(@ViewBag.Tag).addClass("current");
        });
    </script>
    <div class="footer">
        <div class="footer_nav">
            <a href="/Service">服务中心</a>
            <span></span>
            <a href="/Sales">销售网络</a>
            <span></span>
            <a href="/Sales">联系我们</a>
            <div class="clearfix"></div>
        </div>
        <p>@Html.Raw(ViewBag.SiteBasic.Copyright)</p>
        <div class="support">
            <span>@Html.Raw(ViewBag.SiteBasic.Icp)</span>
            <span>技术支持:<a href="http://www.31goods.com">商交宝</a></span>
        </div>
    </div>
</body>
</html>
