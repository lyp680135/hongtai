@page
@inject ICMSService _cmsService
@{
    ViewData["Title"] = "登录";
    ViewData["Desc"] = "登录";
    var siteBasic = _cmsService.GetBasic();
    var mngSetting = _cmsService.GetSetting();
    ViewBag.SiteBasic = siteBasic;
    ViewBag.SiteSetting = mngSetting;
}

@section head
    {
    <link rel="stylesheet" type="text/css" href="/Content/css/login.css">
    <script src="/Content/js/layui/layui.js" type="text/javascript"></script>
    <script type="text/javascript" src="/Content/js/login.js?v=2"></script>
}

<div class="logo_box">
    <img src="/Content/images/logo_vertical.png" />
</div>

<div class="login_content padding_box">
    <div class="login_tab">
        <img src="/Content/images/introduce.png" class="logicon">
        <h1>生产管理登录</h1>
        <a href="/Login/SaleSeller">>>经销商登录</a>
        <div class="clearfix"></div>
    </div>
    <div class="row_box">
        <h2>用户名</h2>
        <div class="input_box"><input type="text" placeholder="请输入手机号/用户名" id="UserName" name="UserName" /></div>
    </div>
    <div class="row_box">
        <h2>密码</h2>
        <div class="input_box"><input type="password" placeholder="请输入密码" id="Pwd" name="Pwd" /></div>
    </div>
    <a class="forget_box" href="/Login/ByPhone">首次登录/忘记密码</a>
    <input class="common_button" type="submit" value="确定" id="btnLogin_ByUserName" />
</div>

