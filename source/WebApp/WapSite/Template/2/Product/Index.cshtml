@page
@inject ICMSService _cmsService
@{
    ViewData["Tag"] = 1;
    ViewData["Title"] = "产品";
    ViewData["Desc"] = "产品";
    var siteBasic = _cmsService.GetBasic();
    ViewBag.SiteBasic = siteBasic;
    var mngSetting = _cmsService.GetSetting();
    ViewBag.SiteSetting = mngSetting;
}
@section head{
<link rel="stylesheet" type="text/css" href="/Content/css/product.css">
}
    <div class="banner_share">
        <img src="/Content/images/product_center.jpg" />
    </div>

    <div class="product_list padding_box">
        @{
            var Product = _cmsService.IcontentColumnDataService.GetContentColumnDataList("闽源产品", 1, 5);
            if (Product != null)
            {
                foreach (var P in Product)
                {
                    <div class="product_box">
                        <div class="product_picture">
                            @if (P["Image"].SafeString() != string.Empty)
                            {
                                foreach (var imgItem in P["Image"].ToString().Split(','))
                                {
                                    <img class="ImgClass" alt="@Html.Raw(P["Name"])" src="@mngSetting.Domain_PC.Substring(0, mngSetting.Domain_PC.Length - 1)@imgItem" />
                                }
                            }
                            <div class="clearfix"></div>
                        </div>
                        <div class="product_name">
                            <img src="/Content/images/product_icon.png" />
                            <h1>@Html.Raw(P["Name"])</h1>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                }
            }
        }
    </div>

