
@page
@model WarrantyManage.Pages.Manage.Settings.EditBaseSpecModel
@{
    ViewData["Title"] = "EditBaseSpec";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>添加规格</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{ await Html.RenderPartialAsync("_ValidationCssPartial");}
    <script type="text/javascript">
        jQuery(document).ready(function () {

            layui.use('laydate', function () {

            });


            $("#form2").validationEngine({
                validationEventTriggers: "blur",
                inlineValidation: true,
                success: false,
            });


        });
        function getIndex(obj) {
            var Index = $(obj).parent().parent().index();
            var piececount = $("#tbdata tbody tr:eq(" + Index + ")").find("input[name='Referpiececount']").val();
            var length = $("#tbdata tbody tr:eq(" + Index + ")").find("input[name='Referlength']").val();
            var meterweight = $("#tbdata tbody tr:eq(" + Index + ")").find("input[name='Refermeterweight']").val();
            if (piececount != "" && length != "" && meterweight != "") {
                $("#tbdata tbody tr:eq(" + Index + ")").find("input[name='Referpieceweight']").val((piececount * meterweight * length).toFixed(0));
            } else {


            }
        }
    </script>
    <style>
        body {
            min-width: inherit;
        }

        .tipinfo {
            margin-left: 20px;
            padding-right: 8px;
        }

        select {
            opacity: 1;
            border: 1px solid #9c9c9c;
            width: 100px;
            height: 32px;
            line-height: 32px;
        }

        input {
            height: 100%;
            width: 100%;
            padding-left: 5px;
        }

        .addclass {
            cursor: pointer;
        }

        .tablelist {
            border: solid 1px #cbcbcb;
            width: 500px;
            clear: both;
        }

        .tablelist td {
            line-height: 35px;
            text-indent: 0px;
            border: solid 1px #9c9c9c;
            white-space: nowrap;
        }


        .tipinfo span {
            width: 95px;
            height: 35px;
            float: left;
        }

        .rightinfo {
            padding: 0;
        }
    </style>
</head>
<body>

    <div class="rightinfo">
        <div id="addbox">

            <form id="form2" method="post">
                @*<div class="tiptop"><span id="addtips">修改规格</span></div>*@
                <div class="tipinfo">
                    <input type="hidden" value="add" id="hiddType" />
                    <input type="hidden" value="" id="hiddId" name="hiddId" />
                    <ul class="forminfo">

                        <li style="line-height: 34px;">
                            <label style="width:70px;">品名<b>*</b></label>
                            @Model.Pm.Name
                            <input type="hidden" name="classid" id="classid" value="@Model.Pm.Id" />
                        </li>
                        <li>
                        </li>
                        <li style="line-height: 34px;">
                            <label style="width:70px;">材质<b>*</b></label>
                            @Model.Cz.Name
                            <input type="hidden" value="@Model.Cz.Id" name="Materialid" id="Materialid" />
                        </li>
                        <li>
                        </li>
                        <li>

                            <table id="tbdata" class="tablelist">
                                <thead>
                                    <tr>
                                        <th>规格</th>
                                        <th>规格别名</th>
                                        <th>支数</th>
                                        <th>长度</th>
                                        <th>米重</th>
                                        <th>理计件重</th>
                                        <th>冷弯弯心直径倍数</th>
                                        <th>反弯弯心直径倍数</th>
                                        <th>操作</th>

                                    </tr>

                                </thead>
                                <tbody>
                                    @{
                                        var list = Model.Bs;
                                        //foreach (var bs in list)
                                        //{
                                        <tr>
                                            <td style='height:35px;'>
                                                <input type="hidden" name="hiddenId" value="@list.Id" />
                                                <input type='text' class="validate[required] " value="@list.Specname" name='Specname' />
                                            </td>
                                            <td style='height:35px;'>
                                                <input type='text' class="validate[required] " value="@list.Callname" name='Callname' />
                                            </td>
                                            <td style='height:35px;'><input type='text' class="validate[required] validate[custom[integer]] " onchange="getIndex(this)" value="@list.Referpiececount" name='Referpiececount' /></td>
                                            <td style='height:35px;'><input type='text' class="validate[required] validate[custom[number]] " onchange="getIndex(this)" value="@list.Referlength" name='Referlength' /></td>
                                            <td style='height:35px;'><input type='text' class="validate[required] validate[custom[number]]" onchange="getIndex(this)" value="@list.Refermeterweight" name='Refermeterweight' /></td>
                                            <td style='height:35px;'><input type='text' class="validate[required] validate[custom[number]]" value="@list.Referpieceweight" name='Referpieceweight' /></td>
                                            <td style='height:35px;'><input type='text' class="validate[required] validate[custom[number]]"  value="@list.Coldratio" name='Coldratio' /></td>
                                            <td style='height:35px;'><input type='text' class="validate[required] validate[custom[number]]"  value="@list.Reverseratio" name='Reverseratio' /></td>
                                            <td style='height:35px;'><span onclick='deleteTrRow(this,@list.Id);' class="addclass">&nbsp;删除</span></td>
                                        </tr>
                                            @*}*@
                                    }
                                </tbody>


                            </table>
                            <a onclick="addrow()" class="addclass">添加</a>

                        </li>

                    </ul>
                </div>

                <div class="tipbtn">
                    <input name="" type="button" onclick="submitData(this);" id="btnadd" class="sure" value="确定" asp-page-handler="First" />&nbsp;
                </div>
            </form>
        </div>

    </div>


    <script type="text/javascript">
       
        function submitData(obj) {
            if (checkValid(obj)) {
                $.ajax({
                    type: "POST", url: '/BaseSpec/Edit',
                    data: $("#form2").serialize(),
                    success: function (re) {
                        if (re.state) {
                            layer.msg('修改成功', { icon: 1 });
                            setTimeout(function () { parent.window.location.reload(); }, 1000);
                        } else {
                            layer.msg(re.content, { icon: 2 });
                        }
                        setTimeout(function () {
                            layer.closeAll();
                        }, 2000);


                    }, error: function (err) {
                        if (err.status == 401) {
                            layer.msg("暂无权限", { icon: 2 });
                        } else {
                            layer.msg("操作失败，系统出现错误！", { icon: 2 });
                        }
                        setTimeout(function () {
                            layer.closeAll();
                        }, 2000);
                    }
                });
            }
        }   

        function addrow() {

            var tables = $('#tbdata');

            var addtr = $("<tr>" +
                "<td style='height:35px;'><input type='hidden' name='hiddenId' value='0'/><input type='text' class='validate[required] ' name='Specname' /></td>" +
                "<td style='height:35px;'><input type='text' class='validate[required]' name='Callname' /></td>"+
                "<td style='height:35px;'><input type='text' class='validate[required] validate[custom[integer]]' onchange='getIndex(this)' name='Referpiececount' /></td>" +
                "<td style='height:35px;'><input type='text' class='validate[required] validate[custom[number]]'  onchange='getIndex(this)' name='Referlength' /></td>" +
                "<td style='height:35px;'><input type='text' class='validate[required] validate[custom[number]]'  onchange='getIndex(this)' name='Refermeterweight' /></td>" +
                "<td style='height:35px;'><input type='text' class='validate[required] validate[custom[number]]'  name='Referpieceweight' /></td>" +
                "<td style='height:35px;'><input type='text' class='validate[required] validate[custom[number]]'  name='Coldratio' /></td>" +
                "<td style='height:35px;'><input type='text' class='validate[required] validate[custom[number]]'  name='Reverseratio' /></td>" +
                "<td style='height:35px;'><span  onclick='deleteTrRow(this,0);' class='addclass' >&nbsp;删除</span></td>" +
                "</tr>");
            addtr.appendTo(tables);

        }

        function deleteTrRow(tr, id) {
            if (id == 0) {
                $(tr).parent().parent().remove();
            }
            else {
                layer.confirm('是否确认删除此条数据', {
                    btn: ['确定', '取消'] //按钮
                },
                    function () {
                        var loadLayer = layer.load(1);
                        $.ajax({
                            type: "Post",
                            url: '/BaseSpec/Delete?id=' + id,
                            success: function (re) {

                                if (parseInt(re) > 0) {
                                    layer.msg('操作成功', { icon: 1 });
                                    $(tr).parent().parent().remove();
                                    parent.window.location.reload();
                                } else {
                                    layer.msg('您选中的规格已被引用，不能删除', { icon: 2 });
                                }
                                layer.close(loadLayer);
                            }, error: function (XMLHttpRequest, textStatus, errorThrown) {
                                layer.close(loadLayer);
                                layer.msg('无法获取到数据！', { icon: 2 });
                            }
                        });

                    },
                    function () {

                    });
            }
        }

    </script>


</body>
</html>