@page
@{
    Layout = null;
    Response.StatusCode = 401;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=8" />
    <title>当前无访问权限</title>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{ await Html.RenderPartialAsync("_ValidationCssPartial");}
    <script language="javascript">
        $(function () {
            $('.error').css({ 'position': 'absolute', 'left': ($(window).width() - 490) / 2 });
            $(window).resize(function () {
                $('.error').css({ 'position': 'absolute', 'left': ($(window).width() - 490) / 2 });
            })
        });
    </script>
    <style type="text/css">
        .error {
            position: absolute;
            left: 429.5px;
            top: -50px;
        }
        .error h2 {
            font-size: 22px;
            margin-top: 20px;
            color: black;
        }
        .error p {
            line-height: 35px;
            color: #717678;
            margin-top: 20px;
            font-size: 14px;
        }
        .error p a {
            color: blue;
        }
    </style>

</head>


<body style="background:#fff;">

    <div class="error">
        <img src="/images/timg.jpg" style="width:520px;" />
        <h2>若您需要使用该权限，请联系管理员！</h2>
        <button onclick="javascript: window.history.go(-1);" class="layui-btn" style="margin-top:20px;background-color: #c2c2c2;border-radius:8px;">
            <i class="layui-icon">&#xe65c;</i> 返回上一页
        </button>
    </div>
</body>
</html>
