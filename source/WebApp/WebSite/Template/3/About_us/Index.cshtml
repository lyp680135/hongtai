@page
@inject ICMSService _cmsServices;
@{
    ViewData["Tag"] = 1;
    var mngSetting = _cmsServices.GetSetting();
}
@section head{
    <link href="/Content/css/intro.css" rel="stylesheet" />
}

<!--------------------------面包屑------------------------------>
<div class="location_box">
    <div class="location">
        <span>&nbsp;公司简介</span>
        <span>您当前的位置： 首页 > </span>
        <div class="clearfix"></div>
    </div>
</div>
<!--------------------------公司简介------------------------------>
<div class="introduce_box">
    <div class="introduce1">
        <img src="/Content/images/intro_pic.jpg" />
        <div class="company_intro">
            @{
                var Intro = _cmsServices.GetSinglePage("关于鸿泰1");
                {
                    if (Intro != null)
                    {
                        @Html.Raw(Util.Extensions.ToHtml(Intro.Content).ToString().Replace("<img src=\"/../", "<img src=\"" + mngSetting.Domain_PC))
                    }
                }
            }
        </div>
        <div class="clearfix"></div>
    </div>
</div>


<div class="introduce2">
    @{
        var Intro2 = _cmsServices.GetSinglePage("关于鸿泰2");
        {
            if (Intro2 != null)
            {
                @Html.Raw(Util.Extensions.ToHtml(Intro2.Content).ToString().Replace("<img src=\"/../", "<img src=\"" + mngSetting.Domain_PC))
            }
        }
    }
    <div class="clearfix"></div>
</div>


<div class="intro_element">
    <div class="element_row element_row2">
        <img src="/Content/images/intro_element1.jpg" />
        <div class="tabulation">
            @{
                var Intro3 = _cmsServices.GetSinglePage("关于鸿泰3");
                {
                    if (Intro3 != null)
                    {
                        @Html.Raw(Util.Extensions.ToHtml(Intro3.Content).ToString().Replace("<img src=\"/../", "<img src=\"" + mngSetting.Domain_PC))
                    }
                }
            }
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="intro_element">
    <div class="element_row element_row1">
        <div class="tabulation">
            @{
                var Intro4 = _cmsServices.GetSinglePage("关于鸿泰4");
                {
                    if (Intro4 != null)
                    {
                        @Html.Raw(Util.Extensions.ToHtml(Intro4.Content).ToString().Replace("<img src=\"/../", "<img src=\"" + mngSetting.Domain_PC))
                    }
                }
            }
        </div>
        <img src="/Content/images/intro_element2.jpg" />
        <div class="clearfix"></div>
    </div>
</div>

<style>
    .introduce2 img {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
