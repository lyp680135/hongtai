@inject Common.IService.IUserService _userService
@inject Common.IService.ICMSService _cmsService
@inject Common.IService.IContentGroupService _contentService
@{
    var SiteBasic = _cmsService.GetBasic();
    var Tag = ViewData["Tag"].ToInt();
    var mngSetting = _cmsService.GetSetting();
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    @if (ViewData["Title"] == null)
    {
        <title>@Html.Raw(SiteBasic.SiteTitle)</title>
    }
    else
    {
        <title>@Html.Raw(ViewData["Title"] + "-" + SiteBasic.CompName)</title>
    }
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @if (ViewData["Desc"] == null)
    {
        <meta name="description" content="@Html.Raw(SiteBasic.SiteDesc)" />
    }
    else
    {
        <meta name="description" content="@Html.Raw(ViewData["Desc"]+"-"+SiteBasic.CompName)" />
    }

    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="/Content/js/jquery-1.9.1.min.js"></script>
    <link href="/Content/css/base.css" rel="stylesheet" />
   <!-- HTML5 shim 和 Respond.js 是为了让 IE8 支持 HTML5 元素和媒体查询（media queries）功能 -->
    <!-- 警告：通过 file:// 协议（就是直接将 html 页面拖拽到浏览器中）访问页面时 Respond.js 不起作用 -->
    <!--[if lt IE 9]>
        <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .login {
            float: right
        }

        .login_box {
            vertical-align: super;
            line-height: 110px;
            color: #fff;
            font-size: 18px;
            display: inline-table;
            position: absolute;
            top: 0px;
            margin-left: 30px;
        }
    </style>
    @RenderSection("head", required: false)

</head>
<body>
    <!--------------------------顶部导航------------------------------>
    <div class="top_nav top_nav1">
        @Html.Raw(Tag != 0 ? " <img src=\"/Content/images/top_nav.jpg\" class=\"Navimg\" />" : "")
        <div class="nav_box">
            <a href="/"><img src="@SiteBasic.Logo" alt="@SiteBasic.CompName" style="margin-top:21px" /></a>
            @if (_userService.IsAuth)
            {
                <a href="~/Manage" class="login">
                    @if (_userService.IsManageMember && _userService.ApplicationUser.Mng_admin != null)
                    {
                        <span class="pic cssr_login"></span>
                        <span class="login_box">@Html.Raw(_userService.ApplicationUser.Mng_admin.RealName)</span>
                    }
                    else
                    {
                        <span class="pic cssr_login"></span>
                        <span class="login_box">@Html.Raw(_userService.SaleSellerUser.Name)</span>
                    }

                </a>
            }
            else
            {
                <a href="~/Manage/" class="pic cssr_login" style="float:right"></a>
            }
            <div class="clearfix"></div>
            <div class="nav">
                <a href="/">首页</a>
                <a href="/About_us">公司简介</a>
                <a href="/Honor">公司荣誉</a>
                <a href="/News/0-1.html">新闻中心</a>
                <a href="/Product">产品中心</a>
                <a href="/Sales">营销网络</a>
                <a href="/Service">服务中心</a>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
     
    @RenderBody()

    <!--------------------------页脚------------------------------>
    <div class="footer">
        <img class="footer_backdrop" src="/Content/images/footer.jpg" />
        <div class="footer_box">
            <div class="footer_content">
                <div class="footer_nav">
                    <a href="/About_us" class="big_title">关于鸿泰</a>
                    <a href="/About_us">公司简介</a>
                    <a href="/Honor">公司荣誉</a>
                    <a href="/Product">产品中心</a>
                    <a href="/Sales">营销网络</a>
                </div>
                <div class="footer_nav">
                    <a href="/News/0-1.html" class="big_title">新闻中心</a>
                    <a href="/News/0-1.html">公司新闻</a>
                    <a href="/News/Dynamic/0-1.html">行业动态</a>
                    <a href="/News/Hotspot/0-1.html">本周热点</a>
                </div>
                <div class="footer_nav">
                    <a href="/Sence/4/3.html" class="big_title">公司风采</a>
                    <a href="/Sence/4/3.html">生产设备</a>
                    <a href="/Sence/4/2.html">配套设施</a>
                    <a href="/Sence/4/1.html">产品移送和储存</a>
                    <a href="/Service">电子质保书查询</a>
                </div>

                <div class="footer_nav">
                    <div class="big_title big_title1">关注我们</div>

                    @{
                        var Follows = _cmsService.IcontentColumnDataService.GetContentColumnDataList("关注鸿泰", 1, 1);
                        if (Follows != null)
                        {
                            foreach (var Follow in Follows)
                            {
                                <img src="@mngSetting.Domain_PC.Substring(0, mngSetting.Domain_PC.Length - 1)@Follow["Image"].ToString()" style="max-height:100px;max-width:100px" />
                                var Tle = Util.Extensions.RemoveHtml(Follow["Title"].ToString());
                                if (!string.IsNullOrEmpty(Tle))
                                {
                                    if (Tle.Length > 6)
                                    {
                                        Tle = Tle.Substring(0, 5);
                                    }
                                }
                                <span class="qr_code">@Html.Raw(Tle)</span>
                            }
                        }
                    }
                </div>
                <div class="footer_nav">
                    <div class="big_title big_title1">联系我们</div>
                    @{
                        var Phones = _cmsService.IcontentColumnDataService.GetContentColumnDataList("联系鸿泰", 1, 1);
                        if (Phones != null)
                        {
                            foreach (var Phone in Phones)
                            {
                                <div class="footer_row">
                                    <span class="pic cssr_address"></span>
                                    <span>@Html.Raw(Phone["Address"])</span>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="footer_row">
                                    <span class="pic cssr_telephone"></span>
                                    <span>@Html.Raw(Phone["Phone"])</span>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="footer_row">
                                    <span class="pic cssr_printer"></span>
                                    <span>@Html.Raw(Phone["Fax"])</span>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="footer_row">
                                    <span class="pic cssr_email"></span>
                                    <span>@Html.Raw(Phone["Email"])</span>
                                    <div class="clearfix"></div>
                                </div>
                            }
                        }
                    }
                </div>
                <div class="clearfix"></div>
            </div>
            <span class="copyright">@Html.Raw(SiteBasic.Copyright)</span>
        </div>
    </div>


    <!-- jQuery (Bootstrap 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
    <script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
    <!-- 加载 Bootstrap 的所有 JavaScript 插件。你也可以根据需要只加载单个插件。 -->
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".nav a").eq(@ViewBag.Tag).addClass("current");
        });
    </script>
</body>
</html>

