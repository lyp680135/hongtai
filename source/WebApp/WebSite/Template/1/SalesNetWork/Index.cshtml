@*@page

@section head
    {
    <link href="/Content/css/iconfont.css" rel="stylesheet" />
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/css/sell_network.css" rel="stylesheet" />
    <link href="/Content/css/sell_network.css" rel="stylesheet" />
    <script src="/Content/js/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/Content/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Content/js/jquery.contentcarousel.js"></script>
}
<div class="stipulation_width banner">
    <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
            <div class="item active">
                @if (Model.CarouselImage != null && Model.CarouselImage.Count > 0)
                {
                    var logo = Model.Setting.ImgPath + "uploadfile/Contentadv/";
                    <img src="@logo@Model.CarouselImage[0]["adsimage"]" style="width:100%;" />
                }
            </div>
        </div>
    </div>
</div>

<div class="stipulation_width container_box">
    @{
        var infomation = Model.Info;
        for (var i = 0; i < infomation.Count; i++)
        {
            if (i % 2 != 0)
            {
                <div class="merchant merchant_left">
                    <div class="logo_box">
                        <a href="">
                            <span class="logo">
                                @{
                                    var path = @Model.Setting.ImgPath + "uploadfile/logoimage/";
                                    <img src="@path@infomation[i]["LogoPath"]" />
                                }
                            </span>
                        </a>
                    </div>
                    <div class="contact">
                        <h1>@Html.Raw(infomation[i]["CompanyName"])</h1>
                        <a href="http://@infomation[i]["AccountNo"].31goods.com" target="_blank">
                            <i class="iconfont icon-dianhua"></i>
                            <span>联系</span>
                        </a>
                        <a href="http://@infomation[i]["AccountNo"].31goods.com" target="_blank">
                            <i class="iconfont icon-dianpu"></i>
                            <span>商铺</span>
                        </a>
                    </div>
                    <div class="clearfix"></div>
                </div>
        }
        else
        {
            <div class="merchant merchant_right">
                <div class="logo_box">
                    <a href="">
                        <span class="logo">
                            @{
                                var path = @Model.Setting.ImgPath + "uploadfile/logoimage/";
                                <img src="@path@infomation[i]["LogoPath"]" />
                            }
                        </span>
                    </a>
                </div>
                <div class="contact">
                    <h1>@Html.Raw(infomation[i]["CompanyName"])</h1>
                    <a href="http://@infomation[i]["AccountNo"].31goods.com" target="_blank">
                        <i class="iconfont icon-dianhua"></i>
                        <span>联系</span>
                    </a>
                    <a href="http://@infomation[i]["AccountNo"].31goods.com" target="_blank">
                        <i class="iconfont icon-dianpu"></i>
                        <span>商铺</span>
                    </a>
                </div>
                <div class="clearfix"></div>
            </div>
                                    }
                                                            }
    }
    <div class="clearfix"></div>
</div>*@
